<template webc:if="!href" webc:nokeep>
    <span class="symbol">
        <material-icon :@name="symbol" :@size="24" :@weight="100" :@fill="false" @style="sharp"></material-icon>
    </span>
    <span @raw="title" webc:nokeep></span>
</template>
<template webc:if="href" webc:nokeep>
    <a :href="href">
        <span class="symbol">
            <material-icon :@name="symbol" :@size="24" :@weight="100" :@fill="false" @style="sharp"></material-icon>
        </span>
        <span @raw="title" webc:nokeep></span>
    </a>
</template>

