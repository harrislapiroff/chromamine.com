    }

    :host > a:hover {
        text-decoration: underline;
        color: var(--color-link-hover);
    }

    .symbol {
        --width: 24px;
        float: left;
        margin-left: calc(-1 * var(--width) - 0.5 * 1ch);
        text-align: right;
        width: var(--width);

        svg {
            vertical-align: middle;
            max-width: 100%;
            height: auto;
        }
    }
